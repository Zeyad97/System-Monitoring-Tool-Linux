#!/bin/bash

mkdir -p logs

USER=$(whoami)
HOST=$(hostname)
DATE=$(date "+%Y-%m-%d_%H-%M-%S")

LOG="logs/report_$DATE.txt"

echo "===== System Monitoring Report =====" > $LOG
echo "Generated by: $USER@$HOST on $(date)" >> $LOG
echo "" >> $LOG


# CPU PERFORMANCE
echo ">> CPU Performance (mpstat):" >> $LOG
mpstat 1 3 >> $LOG
echo "" >> $LOG


